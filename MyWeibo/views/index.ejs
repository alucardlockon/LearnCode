<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body onload="Load('app')">
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <section  id='ShowDiv'>ok,now we will redirect to app in 3 seconds...</section>
    <script type='text/javascript'>
      var secs = 3; //倒计时的秒数
      var URL ;
      function Load(url){
        URL = url;
        for(var i=secs;i>=0;i--)
        {
          window.setTimeout('doUpdate(' + i + ')', (secs-i) * 1000);
        }
      }
      function doUpdate(num)
      {
        document.getElementById('ShowDiv').innerHTML = 'ok,now we will redirect to app in '+num+' seconds...' ;
        if(num == 0) { window.location = URL; }
      }

    </script>
  </body>
</html>
